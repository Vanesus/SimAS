<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="gramatica.xsl"?>
<grammar>
	<name>Recursiva y sin factorizar</name>
	<description>Gramatica con recursividad y sin factorizar</description>
	<non-terminal-symbols>
		<non-terminal>
			<value>S</value>
		</non-terminal>
		<non-terminal>
			<value>D</value>
		</non-terminal>
		<non-terminal>
			<value>T</value>
		</non-terminal>
		<non-terminal>
			<value>L</value>
		</non-terminal>
		<non-terminal>
			<value>I</value>
		</non-terminal>
	</non-terminal-symbols>
	<terminal-symbols>
		<terminal>
			<value>id</value>
		</terminal>
		<terminal>
			<value>(</value>
		</terminal>
		<terminal>
			<value>)</value>
		</terminal>
		<terminal>
			<value>;</value>
		</terminal>
		<terminal>
			<value>*</value>
		</terminal>
		<terminal>
			<value>,</value>
		</terminal>
		<terminal>
			<value>int</value>
		</terminal>
	</terminal-symbols>
	<init-symbol>S</init-symbol>
	<rule-set>
		<rule>
			<value>S → S D </value>
		</rule>
		<rule>
			<value>S → D </value>
		</rule>
		<rule>
			<value>D → T id ( L ) ; </value>
		</rule>
		<rule>
			<value>T → T * </value>
		</rule>
		<rule>
			<value>T → int </value>
		</rule>
		<rule>
			<value>L → L , I </value>
		</rule>
		<rule>
			<value>L → I </value>
		</rule>
		<rule>
			<value>I → T id </value>
		</rule>
	</rule-set>
</grammar>
