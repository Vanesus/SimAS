<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="gramatica.xsl"?>
<grammar>
	<name>notacion prefija</name>
	<description>Gramatica que genera expresiones aritmeticas con notacion prefija</description>
	<non-terminal-symbols>
		<non-terminal>
			<value>S</value>
		</non-terminal>
		<non-terminal>
			<value>E</value>
		</non-terminal>
		<non-terminal>
			<value>O</value>
		</non-terminal>
		<non-terminal>
			<value>L</value>
		</non-terminal>
	</non-terminal-symbols>
	<terminal-symbols>
		<terminal>
			<value>(</value>
		</terminal>
		<terminal>
			<value>)</value>
		</terminal>
		<terminal>
			<value>+</value>
		</terminal>
		<terminal>
			<value>-</value>
		</terminal>
		<terminal>
			<value>*</value>
		</terminal>
		<terminal>
			<value>/</value>
		</terminal>
		<terminal>
			<value>^</value>
		</terminal>
		<terminal>
			<value>n</value>
		</terminal>
		<terminal>
			<value>id</value>
		</terminal>
	</terminal-symbols>
	<init-symbol>S</init-symbol>
	<rule-set>
		<rule>
			<value>S → S E </value>
		</rule>
		<rule>
			<value>S → ε </value>
		</rule>
		<rule>
			<value>E → ( O L ) </value>
		</rule>
		<rule>
			<value>O → + </value>
		</rule>
		<rule>
			<value>O → - </value>
		</rule>
		<rule>
			<value>O → * </value>
		</rule>
		<rule>
			<value>O → / </value>
		</rule>
		<rule>
			<value>O → ^ </value>
		</rule>
		<rule>
			<value>L → E L </value>
		</rule>
		<rule>
			<value>L → E </value>
		</rule>
		<rule>
			<value>E → n </value>
		</rule>
		<rule>
			<value>E → id </value>
		</rule>
	</rule-set>
</grammar>
