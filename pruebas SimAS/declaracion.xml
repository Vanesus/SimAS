<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="gramatica.xsl"?>
<grammar>
	<name>declaraciones</name>
	<description>declaraciones de variables</description>
	<non-terminal-symbols>
		<non-terminal>
			<value>S</value>
		</non-terminal>
		<non-terminal>
			<value>D</value>
		</non-terminal>
		<non-terminal>
			<value>T</value>
		</non-terminal>
		<non-terminal>
			<value>L</value>
		</non-terminal>
		<non-terminal>
			<value>S'</value>
		</non-terminal>
		<non-terminal>
			<value>L'</value>
		</non-terminal>
	</non-terminal-symbols>
	<terminal-symbols>
		<terminal>
			<value>,</value>
		</terminal>
		<terminal>
			<value>;</value>
		</terminal>
		<terminal>
			<value>entero</value>
		</terminal>
		<terminal>
			<value>real</value>
		</terminal>
		<terminal>
			<value>id</value>
		</terminal>
	</terminal-symbols>
	<init-symbol>S</init-symbol>
	<rule-set>
		<rule>
			<value>S → S'</value>
		</rule>
		<rule>
			<value>S' → D S'</value>
		</rule>
		<rule>
			<value>S' → ε</value>
		</rule>
		<rule>
			<value>D → T L ; </value>
		</rule>
		<rule>
			<value>T → entero </value>
		</rule>
		<rule>
			<value>T → real </value>
		</rule>
		<rule>
			<value>L → id L'</value>
		</rule>
		<rule>
			<value>L' → , id L'</value>
		</rule>
		<rule>
			<value>L' → ε</value>
		</rule>
	</rule-set>
</grammar>
